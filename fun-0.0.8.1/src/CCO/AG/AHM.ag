data ATm
    | ANat  i :: {Int}
    | AVar  x :: {Var}
    | ALam  x :: {Var} t1 :: ATm
    | AApp t1 :: ATm t2 :: ATm
    | ALet  x :: {Var} t1 :: ATm t2 :: ATm